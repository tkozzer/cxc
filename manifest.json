{
    "manifest_version": 3,
    "name": "Chrono X Chroma",
    "version": "1.0.1",
    "description": "Enhance X.com browsing with color-coded posts based on age. Includes customizable modes and legend.",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://www.x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "dist/src/popup.html",
        "default_title": "Chrono X Chroma Settings"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*.js",
                "dist/*.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}