{
    "manifest_version": 3,
    "name": "Chrono X Chroma",
    "version": "1.0.0",
    "description": "Color codes X.com posts based on their age with chronological styling",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://www.x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "dist/src/popup.html",
        "default_title": "Chrono X Chroma Settings"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*.js",
                "dist/*.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}